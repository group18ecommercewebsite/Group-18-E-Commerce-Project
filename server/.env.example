# ===========================================
# Server Configuration
# ===========================================
PORT=8000

# URLs (cập nhật khi dùng ngrok/production)
CLIENT_URL=http://localhost:5174
SERVER_URL=http://localhost:8000

# ===========================================
# MongoDB Database
# ===========================================
MONGODB_URI=mongodb://localhost:27017/ecommerce
# Hoặc MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ecommerce

# ===========================================
# JWT Authentication
# ===========================================
JSON_WEB_TOKEN_SECRET_KEY=your_jwt_secret_key_here
SECRET_KEY_ACCESS_TOKEN=your_access_token_secret_here
SECRET_KEY_REFRESH_TOKEN=your_refresh_token_secret_here

# ===========================================
# Cloudinary (Image Upload)
# Đăng ký tại: https://cloudinary.com
# ===========================================
cloudinary_Config_Cloud_Name=your_cloud_name
cloudinary_Config_api_key=your_api_key
cloudinary_Config_api_secret=your_api_secret

# ===========================================
# Email Service (Gmail SMTP)
# Tạo App Password: Google Account > Security > 2-Step Verification > App passwords
# ===========================================
EMAIL=your_email@gmail.com
EMAIL_PASS=your_app_password

# ===========================================
# SePay Payment Gateway (Optional)
# Đăng ký tại: https://sepay.vn
# ===========================================
# sandbox = test, production = thật
SEPAY_ENV=sandbox
SEPAY_MERCHANT_ID=your_merchant_id
SEPAY_SECRET_KEY=your_secret_key
